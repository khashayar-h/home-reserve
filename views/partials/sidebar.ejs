            <li class="nav-item">
                <a href="/home" class="nav-link sideBtn">
                    <i class="nav-icon fa fa-house-chimney"></i>
                    <p>
                      افزودن سوئیت / ویلا
                    </p>
                  </a>
            </li>

            <% } %>

            <% if (!isAdmin) { %>
              <li class="nav-item">
              <form action="/home/" method="POST" id="addHome">
                <a href="#" class="nav-link sideBtn"  onclick="document.getElementById('addHome').submit()">
