<div class="table-responsive">
    <table class="table m-0">
        <thead>
            <tr>
                <th scope="col">ردیف</th>
                <th scope="col">نام</th>
            </tr>
        </thead>
        <tbody>
            <% cities.forEach(function(city) { %>
                <tr  id="<%= city._id %>">
                    <th scope="row"><%= cities.indexOf(city) + 1 %></th>
                    <td><%= city.name %></td>
                    <td>
                        <!-- Call to action buttons -->
                        <ul class="list-inline m-0">
                            <li class="list-inline-item">

                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="<%= '#exampleModal' + city._id %>">
                                    <i class="fa fa-trash"></i>
                                  </button>
                            </li>
                        </ul>
                    </td>
                </tr>

                <!-- Modal -->
                <div class="modal fade" id="<%= 'exampleModal' + city._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">حذف</h1>
                        </div>
                        <div class="modal-body">
                        آیا از حذف شهر مطمئن هستید؟
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لغو</button>

                        <form action="<%= '/cities/delete/' + city._id %>" method="DELETE">
                            <button id="<%= 'btnDelete' + cities.indexOf(city) %>" class="btn btn-danger" type="submit" data-toggle="tooltip" data-placement="top" title="Delete">بله</button>
                        </form>

                        </div>
                    </div>
                    </div>
                </div>
                
              <% }); %>
        </tbody>
    </table>

</div>
